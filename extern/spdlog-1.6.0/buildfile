hxx{*}: extension = h

lib{spdlog_slow}: {hxx ixx txx}{include/**}
lib{spdlog}: {hxx ixx txx}{include/**}

# Export options
lib{spdlog_slow}:
{
  cxx.export.poptions += "-I$src_root/extern/spdlog-1.6.0/include/"
}

lib{spdlog}:
{
  cxx.export.poptions += "-I$src_root/extern/spdlog-1.6.0/include/"
  cxx.export.poptions += "-DSPDLOG_COMPILED_LIB"
  cxx.export.loptions += "-L$src_root/extern/spdlog-1.6.0/build/"
  cxx.export.loptions += "-l:libspdlog.a"
  cxx.export.loptions += "-lpthread"
}
